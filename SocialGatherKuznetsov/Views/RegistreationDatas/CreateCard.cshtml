@model SocialGatherKuznetsov.Models.Card
@{
    ViewData["Title"] = "Создание карточки";
}

<h2>Создание карточки</h2>

<form asp-action="CreateCard">
    <div>
        <label asp-for="Name">Название события:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Text">Описание:</label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Date">Дата:</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="GuestsNumMax">Количество участников:</label>
        <input asp-for="GuestsNumMax" class="form-control" type="number" />
        <span asp-validation-for="GuestsNumMax" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Place">Адрес места события (если место не определено, введите 0):</label>
        <input asp-for="Place" class="form-control" />
        <span asp-validation-for="Place" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="UserId" type="hidden" />
    </div>
    <div>
        <button type="submit">Создать</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>